{
    "compilerOptions": {
      "target": "es5",
      "baseUrl": "src",
      "module": "esnext",
      "jsx": "react-jsx",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "lib": [
        "dom",
        "dom.iterable",
        "ES2022"
      ],
      "skipLibCheck": true,
      "types": ["jest"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "incremental": true,
    },
    "include": [
      "src/**/*", "**/*.ts", "**/*.tsx", "src/components", "src/__test__"
    ],
    "exclude": ["node_modules"]
}
